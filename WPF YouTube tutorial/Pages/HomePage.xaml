<Page x:Class="WPF_YouTube_tutorial.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_YouTube_tutorial.Pages"
      mc:Ignorable="d" 
      Title="HomePage">

    <Grid>


        <Image Source="/Resources/Images/background_bb.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Center" Width="auto" Stretch="UniformToFill"/>


        <TextBlock> 
            <Label Content="MEAT STEEL" 
                   Foreground="DimGray" 
                   FontSize="50" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Margin="30"
                   FontWeight="ExtraBold"
                   FontFamily="Helvetica" />

        </TextBlock>

        <Button x:Name="btnNewSession"
                Content="New Session"
                Height="50" Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="130, 130, 0, 0"
                Foreground="Gray"
                Background="#121212"
                FontWeight="Normal"
                FontSize="15"
                FontStyle="Italic"
                FontFamily="Impact"
                Style="{DynamicResource RoundButton}"
                Click="btnNewSession_Click"
                

            />

        <Button x:Name="btnHistory"
                Content="History"
                Height="50" Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="110, 200, 0, 0"
                Foreground="Gray"
                Background="#121212"
                FontWeight="Normal"
                FontSize="15"
                FontStyle="Italic"
                FontFamily="Impact"
                Style="{DynamicResource RoundButton}"
                Click="btnHistory_Click"


        />

        <Button x:Name="btnWorkoutLibrary"
                Content="Workout Library"
                Height="50" Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="90, 270, 0, 0"
                Foreground="Gray"
                Background="#121212"
                FontWeight="Normal"
                FontSize="15"
                FontStyle="Italic"
                FontFamily="Impact"
                Style="{DynamicResource RoundButton}"
                Click="btnWorkoutLibrary_Click"
                

            />
        
        
        
        
        
        
        

    </Grid>
</Page>
